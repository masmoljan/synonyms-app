{
  "name": "synonyms-api",
  "version": "1.0.0",
  "description": "API for managing synonyms",
  "main": "build/index.js",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "build": "tsc",
    "build:copy": "tsc && node -e \"require('fs').mkdirSync('build/routes/v1', {recursive: true})\" && node -e \"require('fs').copyFileSync('src/routes/v1/spec.yml', 'build/routes/v1/spec.yml')\"",
    "start": "node build/index.js",
    "dev": "tsc && node -e \"require('fs').mkdirSync('build/routes/v1', {recursive: true})\" && node -e \"require('fs').copyFileSync('src/routes/v1/spec.yml', 'build/routes/v1/spec.yml')\" && nodemon build/index.js",
    "vercel-build": "npm run build:copy",
    "lint": "npx @biomejs/biome lint",
    "lint:fix": "npx @biomejs/biome lint --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "config-check": "^1.1.0",
    "dotenv": "^17.0.1",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^13.1.1",
    "openapi-validator-middleware": "^3.2.6",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^30.0.0",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tslint": "^5.20.1",
    "typescript": "^5.8.3"
  }
}
