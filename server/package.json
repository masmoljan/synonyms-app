{
  "name": "synonyms-api",
  "version": "1.0.0",
  "description": "API for managing synonyms",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "build:copy": "tsc && node -e \"require('fs').mkdirSync('build/routes', {recursive: true})\" && node -e \"require('fs').copyFileSync('src/routes/spec.yml', 'build/routes/spec.yml')\"",
    "start": "node build/index.js",
    "dev": "tsc && node -e \"require('fs').mkdirSync('build/routes', {recursive: true})\" && node -e \"require('fs').copyFileSync('src/routes/spec.yml', 'build/routes/spec.yml')\" && nodemon build/index.js",
    "vercel-build": "npm run build:copy"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "config-check": "^1.1.0",
    "dotenv": "^17.0.1",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^13.1.1",
    "openapi-validator-middleware": "^3.2.6"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.8.3"
  }
}
